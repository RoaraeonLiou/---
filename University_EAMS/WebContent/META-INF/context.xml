<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource 
		name="jdbc/usdbcp" 
		auth="Container"
		type="javax.sql.DataSource"
		driverClassName="com.microsoft.sqlserver.jdbc.SQLServerDriver"
		url="jdbc:sqlserver://localhost:1433;DatabaseName=University_DB"
		username="sa" 
		password="123456"
		maxActive="l00" 
		maxidle="30" 
		maxWait="l0000"
	/>
	<!-- name随便起，无所谓 -->
	<!-- url改成自己的， DatabaseName是指数据库名字-->
	<!-- username改成自己的用户， 用户对于设计的数据库要拥有所有权，也可以使用默认用户sa -->
	<!-- password改成自己的密码 -->
	<!-- 其他如果没有需要可以不修改 -->
</Context>